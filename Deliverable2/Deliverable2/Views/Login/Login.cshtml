<div class="row " style="padding-bottom:7rem">

    <div class="text-center">
        <img style="width:40%; height:40%;margin-right:7%" src="~/Pictures/Logo2.jpeg" />
    </div>
</div>
<div class="text-center" style="padding-bottom:4rem">
    <di>
        <button class="btn btn-primary" style="width:100px" data-toggle="modal" data-target="#myModal">Sign in</button>
    </di>
</div>
<div class="text-center">
    <h3>Don't have an account?</h3>

</div>
<div class="text-center" style="padding-top:1rem">
    <a href='@Url.Action("UserRegistration", "UserRegistration")'><h4>Register here</h4></a>
