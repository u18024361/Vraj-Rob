<head>
    <style>
        .modal {
            position: absolute;
            float: left;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            height: 500px;
        }
    </style>
</head>


<div class="row " style="padding-bottom:7rem">

    <div class="text-center">
        <img style="width:40%; height:40%;margin-right:7%" src="~/Pictures/Logo2.jpeg" />
    </div>
</div>
<div class="text-center" style="padding-bottom:4rem">
    <di>
        <button class="btn btn-primary" style="width:100px" data-toggle="modal" data-target="#myModal">Sign in</button>
    </di>
</div>
<div class="text-center">
    <h3>Don't have an account?</h3>
   
</div>
<div class="text-center" style="padding-top:1rem">
    <a href='@Url.Action("UserRegistration", "UserRegistration")'><h4>Register here</h4></a>
    @*<button style="width:200px;margin:1rem" class="btn btn-primary" onclick="location.href='@Url.Action("FLUserReg", "UserRegistration")'">Freelancer</button>
    <button style="width:200px;margin:1rem" class="btn btn-primary" onclick="location.href='@Url.Action("UserRegistration", "UserRegistration")'">Employer</button>*@

</div>

<div class="modal " id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Sign in</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="form-group form-inline" style="margin-left:8rem">
                    <label>Email Address:</label>
                    <input type="text" class="form-control" id="#example" style="margin-left:1rem" />
                </div>
                <br />
                <div class="form-group form-inline" style="margin-left:8rem">
                    <label>Password:</label>
                    <input type="password" class="form-control"  style="margin-left:4rem" />
                </div>
                <br />
                <div class="text-center">
                    <div>
                        <button class="btn btn-primary"  id="signin" value="Submit" onclick="click()">Sign In</button>

                    </div>
                    <br />
                    <div>
                        <a onclick="location.href='@Url.Action("Password", "Login")'">Forgot Password</a>
                    </div>
                </div>

            </div>


        </div>
    </div>
</div>

<script>
    function click()
    {
        if (document.getElementById("signin").value == "employer@example.co.za")
        {
            '@Url.Action("Index", "Employer")';
        }
        else if (document.getElementById("signin").value == "freelancer@example.co.za")
        {
            '@Url.Action("User_Profile", "Freelancer")';
        }

        else if (document.getElementById("signin").value == "admin@example.co.za")
        {

            '@Url.Action("AdminHome", "Admin")';

        }

        
    }

</script>



